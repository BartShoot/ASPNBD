@model ASPNBD.Models.Computers
@{
    ViewData["Title"] = "AttachImage";
    var base64Image = ViewBag.Base64Image;
}

<h1>AttachImage</h1>

@if(Model == null)
{
    <p>Computer not found</p>
}
else
{
    <p>Computer ID: @Model.Id</p>
    <p>Computer Name: @Model.Name</p>
    <p>Computer Year: @Model.Year</p>

    <form asp-action="AttachImage" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
<div class="form-group">
			<label for="Image">Image</label>
			<input type="file" name="Image" class="form-control" />
		</div>
		<input type="submit" value="Attach Image" class="btn btn-primary" />
    </form>

    @if(!string.IsNullOrEmpty(Model.ImageId))
    {
        <h4>Attached Image:</h4>
        <img src="data:image/png;base64,@base64Image" />
    }
}